<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>University Charging Station - Sections</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #10b981 0%, #facc15 50%, #059669 100%);
      min-height: 100vh;
      display: flex;
      overflow-x: hidden;
    }

    /* Sidebar */
    .sidebar {
      width: 260px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border-right: 1px solid rgba(255, 255, 255, 0.25);
      border-radius: 0 20px 20px 0;
      box-shadow: 4px 0 20px rgba(0,0,0,0.1);
      padding: 20px;
      transition: width 0.4s ease, padding 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .sidebar.close {
      width: 60px;
      padding: 20px 8px;
    }

    .toggle-btn {
      display: flex;
      justify-content: flex-end;
      cursor: pointer;
      font-size: 22px;
      color: #ffffff;
      margin-bottom: 20px;
      transition: color 0.3s;
    }

    .toggle-btn:hover {
      color: #facc15;
    }

    .sidebar h2 {
      text-align: center;
      color: #ffffff;
      margin-bottom: 30px;
      font-weight: 600;
      font-size: 20px;
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .sidebar.close h2 {
      opacity: 0;
      transform: translateX(-20px);
      pointer-events: none;
    }

    .menu {
      display: flex;
      flex-direction: column;
      gap: 15px;
      transition: opacity 0.3s ease;
    }

    .menu a {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      padding: 12px 15px;
      border-radius: 10px;
      transition: background 0.3s, color 0.3s, opacity 0.3s ease;
      white-space: nowrap;
    }

    .menu a:hover {
      background: rgba(255, 255, 255, 0.15);
      color: #facc15;
    }

    .sidebar.close .menu {
      opacity: 0;
      pointer-events: none;
    }

    .logout {
      position: absolute;
      bottom: 20px;
      left: 20px;
      right: 20px;
      transition: opacity 0.3s ease;
    }

    .sidebar.close .logout {
      opacity: 0;
      pointer-events: none;
    }

    .logout button {
      width: 100%;
      padding: 12px;
      background: #ef4444;
      color: white;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .logout button:hover {
      background: #dc2626;
    }

    /* Main Content */
    .content {
      flex: 1;
      background: white;
      border-radius: 20px;
      margin: 20px;
      padding: 30px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      transition: margin-left 0.4s ease;
    }

    .content h1 {
      color: #059669;
      font-size: 26px;
      margin-bottom: 25px;
    }

    /* Folder grid */
    .folder-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
    }

    .folder {
      background: #f0fdf4;
      border: 2px solid #10b981;
      border-radius: 15px;
      padding: 20px;
      text-align: center;
      color: #065f46;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s ease, background 0.3s ease;
    }

    .folder:hover {
      background: #d1fae5;
      transform: translateY(-5px);
    }

    .folder i {
      font-size: 28px;
      color: #059669;
      display: block;
      margin-bottom: 10px;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: fixed;
        height: 100vh;
        z-index: 10;
      }
      .content {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <div class="sidebar" id="sidebar">
    <div class="toggle-btn" onclick="toggleSidebar()">
      <i class="fas fa-bars"></i>
    </div>
    <h2>âš¡ Charging Station</h2>
    <div class="menu">
      <a href="admin-dashboard"><i class="fas fa-history"></i><span>Usage Log / History</span></a>
      <a href="sections"><i class="fas fa-folder"></i><span>Sections</span></a>
    </div>
    <div class="logout">
      <button onclick="window.location.href='/logout'"><i class="fas fa-sign-out-alt"></i><span> Logout</span></button>
    </div>
  </div>

  <div class="content">
    <h1>Class Sections</h1>

    <div class="folder-grid">
      <!-- Year 1 -->
      <div class="folder" onclick="openSection('1F1')"><i class="fas fa-folder"></i>1F1</div>
      <div class="folder" onclick="openSection('1F2')"><i class="fas fa-folder"></i>1F2</div>
      <div class="folder" onclick="openSection('1F3')"><i class="fas fa-folder"></i>1F3</div>
      <div class="folder" onclick="openSection('1F4')"><i class="fas fa-folder"></i>1F4</div>
      <div class="folder" onclick="openSection('1F5')"><i class="fas fa-folder"></i>1F5</div>
      <div class="folder" onclick="openSection('1F6')"><i class="fas fa-folder"></i>1F6</div>

      <!-- Year 2 -->
      <div class="folder" onclick="openSection('2F1')"><i class="fas fa-folder"></i>2F1</div>
      <div class="folder" onclick="openSection('2F2')"><i class="fas fa-folder"></i>2F2</div>
      <div class="folder" onclick="openSection('2F3')"><i class="fas fa-folder"></i>2F3</div>
      <div class="folder" onclick="openSection('2F4')"><i class="fas fa-folder"></i>2F4</div>
      <div class="folder" onclick="openSection('2F5')"><i class="fas fa-folder"></i>2F5</div>

      <!-- Year 3 -->
      <div class="folder" onclick="openSection('3F1')"><i class="fas fa-folder"></i>3F1</div>
      <div class="folder" onclick="openSection('3F2')"><i class="fas fa-folder"></i>3F2</div>
      <div class="folder" onclick="openSection('3F3')"><i class="fas fa-folder"></i>3F3</div>
      <div class="folder" onclick="openSection('3F4')"><i class="fas fa-folder"></i>3F4</div>

      <!-- Year 4 -->
      <div class="folder" onclick="openSection('4F1')"><i class="fas fa-folder"></i>4F1</div>
      <div class="folder" onclick="openSection('4F2')"><i class="fas fa-folder"></i>4F2</div>
      <div class="folder" onclick="openSection('4F3')"><i class="fas fa-folder"></i>4F3</div>
      <div class="folder" onclick="openSection('4F4')"><i class="fas fa-folder"></i>4F4</div>
    </div>
  </div>

  <script>
    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("close");
    }

    function openSection(sectionName) {
      window.location.href = `student-points?section=${encodeURIComponent(sectionName)}`;
    }
  </script>
</body>
</html>

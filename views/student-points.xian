<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Points - University Charging Station</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Inter', sans-serif; }

    body {
      background: linear-gradient(135deg, #10b981 0%, #facc15 50%, #059669 100%);
      min-height: 100vh;
      display: flex;
    }

    .sidebar {
      width: 260px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      border-radius: 0 20px 20px 0;
      box-shadow: 4px 0 20px rgba(0, 0, 0, 0.15);
      padding: 20px;
      transition: width 0.3s ease;
      position: relative;
    }

    .sidebar.close { width: 80px; }

    .toggle-btn {
      display: flex; justify-content: flex-end;
      cursor: pointer; font-size: 22px;
      color: white; margin-bottom: 20px;
    }

    .sidebar h2 {
      text-align: center; color: white;
      margin-bottom: 30px; font-weight: 600;
      font-size: 20px; transition: opacity 0.3s ease;
    }

    .sidebar.close h2 { opacity: 0; pointer-events: none; }

    .menu {
      display: flex; flex-direction: column; gap: 15px;
    }

    .menu a {
      display: flex; align-items: center; gap: 12px;
      color: white; text-decoration: none;
      font-weight: 500; padding: 12px 15px;
      border-radius: 10px; transition: background 0.3s, opacity 0.3s;
    }

    .menu a:hover { background: rgba(255, 255, 255, 0.2); }

    .sidebar.close .menu a span { display: none; }

    .logout { position: absolute; bottom: 20px; left: 20px; right: 20px; }

    .logout button {
      width: 100%; padding: 12px; background: #ef4444; color: white;
      border: none; border-radius: 10px; font-weight: 600;
      cursor: pointer; transition: background 0.3s ease;
    }

    .logout button:hover { background: #dc2626; }

    .content {
      flex: 1; background: white; border-radius: 20px;
      margin: 20px; padding: 30px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

    .content h1 { color: #059669; font-size: 26px; margin-bottom: 25px; }

    table {
      width: 100%; border-collapse: collapse;
      border-radius: 10px; overflow: hidden;
    }

    th, td {
      padding: 12px 15px; text-align: left;
      border-bottom: 1px solid #e5e7eb; font-size: 14px;
    }

    th {
      background: #10b981; color: white; font-weight: 600;
    }

    tr:nth-child(even) { background: #f0fdf4; }
    tr:hover { background: #dcfce7; transition: 0.2s; }

    .points-control { display: flex; gap: 6px; align-items: center; }
    .points-control button {
      background: #10b981; border: none; color: white;
      padding: 6px 10px; border-radius: 6px;
      cursor: pointer; transition: background 0.3s;
    }
    .points-control button:hover { background: #059669; }
    .points-control input {
      width: 60px; text-align: center;
      border: 1px solid #d1d5db; border-radius: 6px;
      padding: 4px; font-weight: 500;
    }
  </style>
</head>
<body>
  <div class="sidebar" id="sidebar">
    <div class="toggle-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></div>
    <h2>⚡ Charging Station</h2>
    <div class="menu"> <a href="admin-dashboard"><i class="fas fa-history"></i><span>Usage Log / History</span></a> 
    <a href="sections"><i class="fas fa-folder"></i><span>Sections</span></a> 
     
    </div>

    <div class="logout">
      <button onclick="window.location.href='/logout'"><i class="fas fa-sign-out-alt"></i> Logout</button>
    </div>
  </div>

  <div class="content">
    <h1 id="sectionTitle">Student Points</h1>

    <table>
      <thead>
        <tr>
          <th>Student ID</th>
          <th>Name</th>
          <th>Total Points</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody id="studentTable">
        <!-- Dynamic data will appear here -->
      </tbody>
    </table>
  </div>

  <script>
    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("close");
    }

    // Get section name from URL
    const params = new URLSearchParams(window.location.search);
    const sectionName = params.get("section");
    const title = document.getElementById("sectionTitle");
    const tableBody = document.getElementById("studentTable");

    // Dummy sample data per section
    const students = {
      "1F1": [
        { id: "2025-001", name: "Juan Dela Cruz", points: 35 },
        { id: "2025-002", name: "Maria Santos", points: 40 },
      ],
      "3F2": [
        { id: "2023-005", name: "Carlos Reyes", points: 28 },
        { id: "2023-006", name: "Angela Cruz", points: 33 },
      ],
      "4F2": [
        { id: "MCC2022-0539", name: "Ma. Sachilette Leyesa", points: 100},
        { id: "MCC2022-0811", name: "Lans Hernandez", points: 88},
      ]
    };

    if (sectionName) {
      title.innerText = `Student Points - ${sectionName}`;
      const data = students[sectionName] || [{ id: "—", name: "No data available", points: "—" }];
      data.forEach(s => {
        tableBody.innerHTML += `
          <tr>
            <td>${s.id}</td>
            <td>${s.name}</td>
            <td>${s.points}</td>
            <td class="points-control">
              <button>-</button>
              <input type="number" value="${s.points}" />
              <button>+</button>
            </td>
          </tr>`;
      });
    }
  </script>
</body>
</html>

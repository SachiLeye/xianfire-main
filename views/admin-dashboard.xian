<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>University Charging Station - Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      background: linear-gradient(135deg, #10b981 0%, #facc15 50%, #059669 100%);
      min-height: 100vh;
      display: flex;
      overflow-x: hidden;
    }

    /* Sidebar */
    .sidebar {
      width: 260px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border-right: 1px solid rgba(255, 255, 255, 0.25);
      border-radius: 0 20px 20px 0;
      box-shadow: 4px 0 20px rgba(0,0,0,0.1);
      padding: 20px;
      transition: width 0.4s ease, padding 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .sidebar.close {
      width: 60px;
      padding: 20px 8px;
    }

    .toggle-btn {
      display: flex;
      justify-content: flex-end;
      cursor: pointer;
      font-size: 22px;
      color: #ffffff;
      margin-bottom: 20px;
      transition: color 0.3s;
    }

    .toggle-btn:hover {
      color: #facc15;
    }

    .sidebar h2 {
      text-align: center;
      color: #ffffff;
      margin-bottom: 30px;
      font-weight: 600;
      font-size: 20px;
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .sidebar.close h2 {
      opacity: 0;
      transform: translateX(-20px);
      pointer-events: none;
    }

    .menu {
      display: flex;
      flex-direction: column;
      gap: 15px;
      transition: opacity 0.3s ease;
    }

    .menu a {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      padding: 12px 15px;
      border-radius: 10px;
      transition: background 0.3s, color 0.3s, opacity 0.3s ease;
      white-space: nowrap;
    }

    .menu a:hover {
      background: rgba(255, 255, 255, 0.15);
      color: #facc15;
    }

    .sidebar.close .menu {
      opacity: 0;
      pointer-events: none;
    }

    .logout {
      position: absolute;
      bottom: 20px;
      left: 20px;
      right: 20px;
      transition: opacity 0.3s ease;
    }

    .sidebar.close .logout {
      opacity: 0;
      pointer-events: none;
    }

    .logout button {
      width: 100%;
      padding: 12px;
      background: #ef4444;
      color: white;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .logout button:hover {
      background: #dc2626;
    }

    /* Main Content */
    .content {
      flex: 1;
      background: white;
      border-radius: 20px;
      margin: 20px;
      padding: 30px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      transition: margin-left 0.4s ease;
    }

    .content h1 {
      color: #059669;
      font-size: 26px;
      margin-bottom: 25px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      font-size: 14px;
      border-bottom: 1px solid #e5e7eb;
    }

    th {
      background: #10b981;
      color: white;
    }

    tr:nth-child(even) {
      background: #f9fafb;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: fixed;
        height: 100vh;
        z-index: 10;
      }
      .content {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>
  <div class="sidebar" id="sidebar">
    <div class="toggle-btn" onclick="toggleSidebar()">
      <i class="fas fa-bars"></i>
    </div>
    <h2>âš¡ Charging Station</h2>
    <div class="menu">
         <a href="admin-dashboard" onclick="showUsageLog()"><i class="fas fa-history"></i><span>Usage Log / History</span></a>
         <a href="sections"><i class="fas fa-folder"></i><span>Sections</span></a>
    </div>

    <div class="logout">
      <button onclick="window.location.href='/logout'"><i class="fas fa-sign-out-alt"></i><span> Logout</span></button>
    </div>
  </div>

  <div class="content" id="mainContent">
    <h1>Usage Log / History</h1>
    <table>
      <thead>
        <tr>
          <th>Student ID</th>
          <th>Name</th>
          <th>Section</th>
          <th>Charger Type</th>
          <th>Starting Points</th>
          <th>Used Points</th>
          <th>Ending Points</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>2023-001</td>
          <td>Juan Dela Cruz</td>
          <td>BSIT 3A</td>
          <td>Universal</td>
          <td>50</td>
          <td>10</td>
          <td>40</td>
        </tr>
      </tbody>
    </table>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      sidebar.classList.toggle("close");
    }

    function showUsageLog() {
      document.getElementById("mainContent").innerHTML = `
        <h1>Usage Log / History</h1>
        <table>
          <thead>
            <tr>
              <th>Student ID</th>
              <th>Name</th>
              <th>Section</th>
              <th>Charger Type</th>
              <th>Starting Points</th>
              <th>Used Points</th>
              <th>Ending Points</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>2023-001</td>
              <td>Juan Dela Cruz</td>
              <td>BSIT 3A</td>
              <td>Universal</td>
              <td>50</td>
              <td>10</td>
              <td>40</td>
            </tr>
          </tbody>
        </table>
      `;
    }
  </script>
</body>
</html>

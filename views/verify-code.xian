<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify Code</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    *{margin:0;padding:0;box-sizing:border-box}
    body{font-family:'Inter',sans-serif;background:linear-gradient(135deg,#10b981 0%,#facc15 50%,#059669 100%);min-height:100vh;display:flex;align-items:center;justify-content:center;padding:20px;position:relative}
    .verify-card{background:white;border-radius:16px;box-shadow:0 10px 40px rgba(0,0,0,0.1);padding:40px;max-width:400px;width:100%;text-align:center;position:relative;z-index:1}
    .logo{margin-bottom:20px}.logo i{font-size:48px;color:#facc15}
    h2{color:#059669;margin-bottom:25px;font-size:24px;font-weight:600}
    .input-group{margin-bottom:20px;text-align:left}
    .input-group label{display:block;color:#374151;font-size:14px;margin-bottom:8px;font-weight:500}
    .input-group input{width:100%;padding:12px 16px;border:1px solid #d1d5db;border-radius:8px;font-size:16px;transition:border-color .3s ease;text-align:center;letter-spacing:4px}
    .input-group input:focus{border-color:#10b981;outline:none}
    .verify-btn{background:linear-gradient(135deg,#10b981,#059669);color:white;padding:12px 24px;border:none;border-radius:8px;font-size:16px;font-weight:600;cursor:pointer;width:100%;margin-top:10px}
    .verify-btn:hover{background:linear-gradient(135deg,#059669,#047857)}
    p{text-align:center;margin-top:15px;font-size:14px;color:#6b7280}
    a{color:#10b981;text-decoration:none;font-weight:500}
    a:hover{text-decoration:underline}

    /* Notification styling */
    .notification {
      position: absolute;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      background: #10b981;
      color: white;
      padding: 12px 20px;
      border-radius: 8px;
      font-weight: 500;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.5s ease;
      z-index: 999;
    }
    .notification.show {
      opacity: 1;
    }
  </style>
</head>
<body>
  <div class="notification" id="notify">Code verified! Redirecting...</div>

  <div class="verify-card">
    <div class="logo"><i class="fas fa-bolt"></i></div>
    <h2>Verify Code</h2>
    <form id="verifyForm">
      <div class="input-group">
        <label for="code">Enter the code sent to your email</label>
        <input type="text" id="code" maxlength="6" required placeholder="Enter code">
      </div>
      <button class="verify-btn" type="submit">Verify</button>
    </form>
    <p><a href="forgot-password.html">Back</a></p>
  </div>

  <script>
    const notify = document.getElementById('notify');

    // Always clear notification when the page loads
    window.onload = () => {
      notify.classList.remove('show');
      notify.style.background = '#10b981';
    };

    document.getElementById('verifyForm').onsubmit = function(e){
      e.preventDefault();
      const code = document.getElementById('code').value.trim();

      if(code !== ""){
        notify.textContent = "Code verified! Redirecting...";
        notify.classList.add('show');
        setTimeout(() => {
          window.location.href = "reset-password.html";
        }, 2000);
      } else {
        notify.textContent = "Please enter a valid code.";
        notify.style.background = "#ef4444";
        notify.classList.add('show');
        setTimeout(() => notify.classList.remove('show'), 2000);
      }
    };
  </script>
</body>
</html>
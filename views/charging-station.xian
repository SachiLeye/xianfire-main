<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Charging Station - IoT Device</title>
  <style>
    body {
      background: linear-gradient(135deg, #10b981 0%, #facc15 50%, #059669 100%);
      min-height: 100vh;
      padding: 30px 15px;
      font-family: "Segoe UI", sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /*Main Container */
    .charging-container {
      background: #ffffffea;
      border-radius: 16px;
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
      padding: 25px 20px;
      max-width: 600px;
      width: 100%;
      display: flex;
      flex-direction: column;
      position: relative;
      gap: 10px;
    }

    /* Header Controls */
    .header-controls {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .back-btn {
      background: #e5e7eb;
      color: #059669;
      border: none;
      border-radius: 6px;
      padding: 6px 12px;
      font-size: 14px;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .back-btn:hover {
      background: #d1fae5;
    }

    h1 {
      text-align: center;
      color: #059669;
      font-size: 20px;
      font-weight: 700;
    }

    /* LCD Display Section */
    .lcd-display {
      background: #059669;
      border-radius: 12px;
      padding: 15px;
      color: #d1fae5;
      text-align: center;
      font-family: "Courier New", monospace;
      margin-bottom: 10px;
      box-shadow: inset 0 3px 8px rgba(0, 0, 0, 0.2);
    }

    .student-info {
      border-radius: 8px;
      padding: 10px;
      text-align: left;
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      font-size: 15px;
      color: #fff;
      margin-bottom: 6px;
    }

    .info-value {
      font-weight: 700;
      color: #d1fae5;
    }

    .points-display {
      border-radius: 8px;
      padding: 10px;
      text-align: center;
      margin-top: 10px;
      background: rgba(255, 255, 255, 0.1);
    }

    .points-label {
      font-size: 13px;
      opacity: 0.9;
    }

    .points-value {
      font-size: 22px;
      font-weight: bold;
      color: #fff;
    }

    /* Control Panel */
    .control-panel {
      background: #f9fafb;
      border-radius: 10px;
      padding: 15px;
      border: 1px solid #e5e7eb;
    }

    .control-panel h3 {
      color: #059669;
      font-size: 16px;
      margin-bottom: 10px;
      font-weight: 700;
      text-align: center;
    }

    /* Input Fields */
    .input-row {
      display: flex;
      justify-content: space-between;
      gap: 10px;
      margin-bottom: 15px;
      align-items: center;
    }

    .input-group {
      display: flex;
      flex-direction: column;
      flex: 1;
      max-width: 250px;
    }

    .input-group label {
      font-size: 13px;
      color: #374151;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .input-group input {
      padding: 8px 10px;
      border: 1.5px solid #d1d5db;
      border-radius: 6px;
      font-size: 14px;
      color: #333;
      outline: none;
      transition: border-color 0.3s;
    }

    .input-group input::placeholder {
      color: #9ca3af;
    }

    .input-group input:focus {
      border-color: #10b981;
    }

    /* Socket Buttons */
    .socket-selection {
      display: flex;
      justify-content: space-evenly;
      gap: 8px;
      margin-bottom: 15px;
    }

    .socket-btn {
      background: #fff;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      padding: 10px;
      text-align: center;
      cursor: pointer;
      transition: 0.3s ease;
      flex: 1;
    }

    /* Remove hover when not active */
    .socket-btn:not(.active):hover {
      border-color: #e5e7eb;
      transform: none;
    }

    .socket-btn.active {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      border-color: #10b981;
    }

    .socket-icon {
      font-size: 24px;
      margin-bottom: 3px;
    }

    /* Start Charging */
    .start-charging-btn {
      width: 100%;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: bold;
      padding: 10px;
      cursor: pointer;
      transition: 0.3s ease;
    }

    .start-charging-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(16, 185, 129, 0.4);
    }

    /* Timer Display */
    .timer-display {
      background: #059669;
      border-radius: 10px;
      padding: 20px;
      text-align: center;
      display: none;
    }

    .timer-display.active {
      display: block;
    }

    .timer-label {
      color: #d1fae5;
      font-size: 14px;
      margin-bottom: 8px;
    }

    .timer-value {
      color: #fff;
      font-size: 30px;
      font-weight: bold;
    }

    /* Stop Button */
    .stop-btn {
      background: #ef4444;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
      margin-top: 10px;
      transition: 0.3s ease;
      width: 100%;
    }

    .stop-btn:hover {
      background: #dc2626;
    }

    /* Table */
    .log-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      font-size: 13px;
    }

    .log-table th,
    .log-table td {
      border: 1px solid #e5e7eb;
      padding: 6px 8px;
      text-align: left;
    }

    .log-table th {
      background: #10b981;
      color: white;
    }

    .log-table tr:nth-child(even) {
      background: #f9fafb;
    }

    /* Logout Button */
    .logout-btn {
      background: #d32f2f;
      color: #fff;
      border: none;
      padding: 10px 22px;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      font-size: 0.95rem;
      transition: 0.3s ease;
      align-self: center;
      margin-top: 15px;
    }

    .logout-btn:hover {
      background: #b71c1c;
    }

    /* Responsive */
    @media (max-width: 600px) {
      .input-row {
        flex-direction: column;
        gap: 8px;
      }

      .socket-selection {
        flex-direction: column;
      }

      .logout-btn {
        width: 45px;
        padding: 10px;
      }

      .logout-btn::after {
        content: "‚á¶";
        font-size: 18px;
      }

      .logout-btn span {
        display: none;
      }
    }
  </style>
</head>

<body>
  <div class="charging-container">
    <div class="header-controls">
      <button class="back-btn" onclick="window.location.href='/user-dashboard'">‚Üê Back to Dashboard</button>
      <h1>‚ö° Charging Station</h1>
    </div>

    <div class="lcd-display">
      <div>‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó<br>‚ïë STUDENT CHARGING DEVICE ‚ïë<br>‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù</div>

      <div class="student-info">
        <div class="info-row"><span>STUDENT ID:</span><span class="info-value" id="displayStudentId">2021-12345</span></div>
        <div class="info-row"><span>NAME:</span><span class="info-value" id="displayName">JUAN DELA CRUZ</span></div>
        <div class="info-row"><span>LAST USED:</span><span class="info-value" id="displayLastUsed">2025-10-20</span></div>
      </div>

      <div class="points-display">
        <div class="points-label">AVAILABLE POINTS</div>
        <div class="points-value" id="displayPoints">150</div>
      </div>
    </div>

    <div class="control-panel" id="controlPanel">
      <h3>üìù Charging Configuration</h3>

      <div class="input-row">
        <div class="input-group">
          <label for="studentId">Student RFID</label>
          <input type="text" id="studentId" placeholder="Enter RFID" value="2021-12345" />
        </div>

        <div class="input-group">
          <label for="pointsToSpend">Points to Spend</label>
          <input type="number" id="pointsToSpend" placeholder="Enter Points" min="1" max="150" value="10" />
        </div>
      </div>

      <div class="socket-selection">
        <div class="socket-btn active" onclick="selectSocket(1)">
          <div class="socket-icon">üîå</div>
          <div>Universal Charger</div>
        </div>
        <div class="socket-btn" onclick="selectSocket(2)">
          <div class="socket-icon">üîå</div>
          <div>Own Charger</div>
        </div>
      </div>

      <button class="start-charging-btn" onclick="startCharging()">‚ö° START CHARGING</button>
    </div>

    <div class="timer-display" id="timerDisplay">
      <div class="timer-label">‚è±Ô∏è CHARGING IN PROGRESS</div>
      <div class="timer-value" id="timerValue">05:00</div>
      <button class="stop-btn" onclick="stopCharging()">‚èπÔ∏è STOP CHARGING</button>
    </div>

    <table class="log-table" id="usageLogTable">
      <thead>
        <tr>
          <th>Student</th>
          <th>Points Used</th>
          <th>Socket</th>
          <th>Time</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <button class="logout-btn" onclick="showLogoutModal()"><span>Logout</span></button>
  </div>

  <!-- Logout Confirmation Modal -->
  <div id="logoutModal" style="display:none; position:fixed; inset:0; background:rgba(0,0,0,0.5); align-items:center; justify-content:center; z-index:9999;">
    <div style="background:#fff; padding:20px; border-radius:12px; width:320px; text-align:center; box-shadow:0 8px 30px rgba(0,0,0,0.2);">
      <h3 style="margin-bottom:12px; color:#111827;">Confirm Logout</h3>
      <p style="margin-bottom:18px; color:#6b7280;">Are you sure you want to log out?</p>
      <div style="display:flex; gap:10px; justify-content:center;">
        <button onclick="confirmLogout()" style="padding:10px 16px; background:#ef4444; color:white; border:none; border-radius:8px; font-weight:600; cursor:pointer;">Logout</button>
        <button onclick="hideLogoutModal()" style="padding:10px 16px; background:#e5e7eb; color:#111827; border:none; border-radius:8px; font-weight:600; cursor:pointer;">Cancel</button>
      </div>
    </div>
  </div>

  <script>
    let selectedSocket = 1;
    let chargingInterval = null;
    let remainingSeconds = 0;

    function selectSocket(socketNumber) {
      selectedSocket = socketNumber;
      document.querySelectorAll(".socket-btn").forEach((btn, index) => {
        btn.classList.toggle("active", index + 1 === socketNumber);
      });
    }

    function startCharging() {
      const studentId = document.getElementById("studentId").value;
      const pointsToSpend = parseInt(document.getElementById("pointsToSpend").value);

      if (!studentId || !pointsToSpend || pointsToSpend <= 0) {
        alert("Please enter valid details!");
        return;
      }

      const currentPoints = parseInt(document.getElementById("displayPoints").textContent);
      if (pointsToSpend > currentPoints) {
        alert("Insufficient points!");
        return;
      }

      document.getElementById("controlPanel").style.display = "none";
      document.getElementById("timerDisplay").classList.add("active");

      remainingSeconds = pointsToSpend * 120;
      updateTimer();

      chargingInterval = setInterval(() => {
        remainingSeconds--;
        updateTimer();
        if (remainingSeconds <= 0) {
          stopCharging();
          alert("Charging completed!");
        }
      }, 1000);
    }

    function updateTimer() {
      const min = String(Math.floor(remainingSeconds / 60)).padStart(2, "0");
      const sec = String(remainingSeconds % 60).padStart(2, "0");
      document.getElementById("timerValue").textContent = `${min}:${sec}`;
    }

    function stopCharging() {
      clearInterval(chargingInterval);
      chargingInterval = null;

      const usedPoints = parseInt(document.getElementById("pointsToSpend").value);
      const currentPoints = parseInt(document.getElementById("displayPoints").textContent);
      document.getElementById("displayPoints").textContent = currentPoints - usedPoints;

      document.getElementById("controlPanel").style.display = "block";
      document.getElementById("timerDisplay").classList.remove("active");
    }

    // Logout Modal Functions
    function showLogoutModal() {
      document.getElementById('logoutModal').style.display = 'flex';
    }
    
    function hideLogoutModal() {
      document.getElementById('logoutModal').style.display = 'none';
    }
    
    function confirmLogout() {
      window.location.href = '/logout';
    }
  </script>
</body>
</html>
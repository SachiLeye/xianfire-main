    <div class="control-panel" id="controlPanel">
      <h3>üìù Charging Configuration</h3>

      <div class="input-row">
        <div class="input-group">
          <label for="studentId">Student RFID</label>
          <input type="text" id="studentId" placeholder="Enter RFID" value="" readonly />
        </div>

        <div class="input-group">
          <label for="pointsToSpend">Points to Spend</label>
          <input type="number" id="pointsToSpend" placeholder="Enter Points" min="1" max="0" value="10" />
        </div>
